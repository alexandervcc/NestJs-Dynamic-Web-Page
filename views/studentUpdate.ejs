<!--INICIO CONTENIDO-->


<div class='table__section tabIn' >
    <h2 class='pricing__heading'>Insert Data for Student to Update</h2>

    <%var idArray=[]%>
    <% for(let sub of datos[0]){
        idArray.push(sub.id);
    }
    const maxPar=Math.max.apply(null,idArray);
    const minPar=Math.min.apply(null,idArray);
    %>

    <form action="/student/updateForm?id=<%=stud.id%>&old=<%=stud.subid_stud%>" method="post">
        <div id='btnInput'>
        <button type="submit" class='btn btn-primary' id='btnSize'>Update</button>
        <button type="reset" class='btn btn-danger' id='btnSize'>Reset</button>
            <a href='/student/'>
                <button type='button' class='btn btn-secondary' id='btnSize' style='background-color: #8946d5'>Back</button>
            </a>
        </div>
        <table class="table">
            <tr>
                <td>
                    <label for="nombre" >Student Name </label>
                </td>
                <td>
                    <input id="nombre" type="text" name="nombre" required class="form-control" value='<%=stud.nom_stud%>'>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="apellido" >Student Surname </label>
                </td>
                <td>
                    <input id="apellido" type="text" name="apellido" required class="form-control" value='<%=stud.ape_stud%>'>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="fnac">Born Date</label>
                </td>
                <td>
                    <% var today =  new Date();
                    var dd = String(today.getDate()).padStart(2, '0');
                    var mm = String(today.getMonth() + 1).padStart(2, '0'); //January is 0!
                    var yyyy = today.getFullYear();
                    today = mm + '/' + dd + '/' + yyyy;
                    %>
                    <input id="fnac" type="date" name="fnac" required
                           min="1980-01-01"
                           max="2002-01-01"
                           class="form-control"
                           value='<%=stud.fnac_stud%>'>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="genero">Genero</label>
                </td>
                <td style='text-align: left;top: 50%;transform: translate(0px -20px);display: block'>
                    <%if(stud.gen_stud.match("male")){%>
                        <input style='width: 20px;'type="radio" id="male" name="genero" value="male"  required checked>
                        <label style='font-size: 25px;' for="male">Male</label><br>
                        <input style='width: 20px;'type="radio" id="female" name="genero" value="female" >
                        <label style='font-size: 25px;' for="female">Female</label><br>
                    <%}else {%>
                        <input style='width: 20px;'type="radio" id="male" name="genero" value="male"  required >
                        <label style='font-size: 25px;' for="male">Male</label><br>
                        <input style='width: 20px;'type="radio" id="female" name="genero" value="female" checked>
                        <label style='font-size: 25px;' for="female">Female</label><br>
                    <%}%>
                </td>
            </tr>
            <tr>
                <td>
                    <label for='subject'>Subject</label>
                </td>
                <td>

                    <input id="sub" type="number" id="subject" name="subject"
                           max='<%=maxPar%>'
                           min='<%=minPar%>' required class='form-control'
                           value='<%=stud.subid_stud%>'>
                </td>
            </tr>

        </table>

    </form>
    <h1><%=men%></h1>
    <div>
        <h3>Materias Disponibles =<%=datos[1]%> </h3>
        <table class='table table-striped ' style='background-color: white;font-size: 25px'>
            <thead class='thead-dark'>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Cupo</th>
                <th>Code</th>
                <th>Start Date</th>
                <th>End Date</th>


            </tr>
            </thead>
            <% for(let sub of datos[0]){
            %>
            <tr>
                <td><%=sub.id%></td>
                <td><%=sub.sub_name%></td>
                <td><%=sub.sub_cupo%></td>
                <td><%=sub.sub_cod%></td>
                <td><%=sub.sub_fstart%></td>
                <td><%=sub.sub_fend%></td>

            </tr>
            <%}%>


        </table>

        <div style='
        margin: 0;
        display: flex;
        justify-content: center;
        width: 100%;

'>
            <table >
                <tr>
                    <%  const mod=datos[1]%10;
                    const res=datos[1]/10-mod;
                    //   var i:Number;
                    %>
                    <%for (i=0;i<datos[1];i=i+10){%>
                    <td style='
                margin-left: 200px;
                margin-right: 200px;
'>


                        <p style='font-size: 25px;margin-left: 10px;margin-right: 10px '>
                            <a href='/student/create?skip=<%=i%>&order=ASC'>
                                <%=(i/10)+1%>
                            </a>
                        </p>


                    </td>
                    <%}%>
                </tr>
            </table>
        </div>
    </div>



