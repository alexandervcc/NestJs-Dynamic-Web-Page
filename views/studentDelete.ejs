<!--INICIO CONTENIDO-->



<div class='table__section tabIn' >
    <h2 class='pricing__heading'>Insert Data for Student to Update</h2>


    <form action="/student/deleting?id=<%=stud.id%>" method="post">

        <div id='btnInput'>
        <button type="submit" class='btn btn-danger' id='btnSize'>Delete</button>
            <a href='/student/'>
                <button type='button' class='btn btn-secondary' id='btnSize' style='background-color: #8946d5'>Back</button>
            </a>
        </div>
        <table class="table">
            <tr>
                <td>
                    <label for="nombre" >Student Name </label>
                </td>
                <td>
                    <input id="nombre" type="text" name="nombre" required class="form-control" value='<%=stud.nom_stud%>' readonly>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="apellido" >Student Surname </label>
                </td>
                <td>
                    <input id="apellido" type="text" name="apellido" required class="form-control" value='<%=stud.ape_stud%>' readonly>
                </td>
            </tr>
            <tr>
                <td>
                    <label for="fnac">Born Date</label>
                </td>
                <td>

                    <input id="fnac" type="date" name="fnac" required readonly

                           class="form-control"
                           value='<%=stud.fnac_stud%>'>
                </td>
            </tr>

            <tr>
                <td>
                    <label for="genero">Genero</label>
                </td>
                <td style='text-align: left;top: 50%;transform: translate(0px -20px);display: block'>
                    <%if(stud.gen_stud.match("male")){%>
                        <input style='width: 20px;'type="radio" id="male" name="genero" value="male"  required checked disabled>
                        <label style='font-size: 25px;' for="male">Male</label><br>
                        <input type="radio" id="female"style='width: 20px;' name="genero" value="female"  readonly>
                        <label style='font-size: 25px;' for="female">Female</label><br>
                    <%}else {%>
                        <input type="radio" id="male" name="genero" value="male" style='width: 20px;' required  readonly>
                        <label style='font-size: 25px;' for="male">Male</label><br>
                        <input type="radio" id="female" name="genero" value="female" checked disabled style='width: 20px;'>
                        <label style='font-size: 25px;' for="female">Female</label><br>
                    <%}%>
                </td>
            </tr>
            <tr>
                <td>
                    <label for='subject'>Subject</label>
                </td>
                <td>

                    <input id="sub" type="number" id="subject" name="subject"
                           class='form-control'
                           value='<%=stud.subid_stud%>' readonly>
                </td>
            </tr>

        </table>

    </form>


</div>

