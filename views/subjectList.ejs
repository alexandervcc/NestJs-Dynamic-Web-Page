<body >



<div class="navbar">
    <div class="navbar-container container">
        <a href='/' class='navbar-logo'>
            Cheems University
        </a>
        <ul class= 'nav-menu active'>
            <li class="nav-item">
                <a href='/' class='nav-links'>
                    Home
                </a>
            </li>
            <li class="nav-item">
                <a href='/subject/' class='nav-links'>
                    Subjects
                </a>
            </li>

            <li class="nav-item">
                <a href='/student/' class='nav-links'>
                    Students
                </a>
            </li>
        </ul>
    </div>
</div>


<div class='table__section'>
    <h2 class='pricing__heading'>Proced to manipulate subjects registers</h2>
    <h3 class='pricing__heading'><%=men%></h3>
    <div>

        <a href="/subject/create">
            <button class='btn btn-primary edit' style='font-size: 25px'>
                Create Subject
            </button>
        </a>
<hr/>
        <form action="/subject/" method="get">
            <label for="search" class='form-label' style='font-size: 35px'>Search</label>
            <input id="search" type="text" name="search" style='width: 500px;height: 47px;margin-right: 30px' />
            <button type="submit" class='btn btn-primary edit' style='font-size: 25px'>
                Search
            </button>
        </form>



    </div>

    <div style='margin-top: 30px'>

        <h3>Total de Registros =<%=datos[1]%> </h3>
        <table class='table table-striped ' style='background-color: white;font-size: 25px'>
            <thead class='thead-dark'>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Cupo</th>
                <th>Code</th>
                <th>Start Date</th>
                <th>End Date</th>
                <th>Actions</th>

            </tr>
            </thead>
            <% for(let sub of datos[0]){%>
            <tr>
                <td><%=sub.id%></td>
                <td><%=sub.sub_name%></td>
                <td><%=sub.sub_cupo%></td>
                <td><%=sub.sub_cod%></td>
                <td><%=sub.sub_fstart%></td>
                <td><%=sub.sub_fend%></td>
                <td style='width: 700px;'>
                    <a href="/subject/edit?id=<%=sub.id%>" style=''>
                    <button class='btn btn-primary edit' style='font-size: 25px'>Edit</button>
                    </a>

                    <a href="/subject/delete?id=<%=sub.id%>">
                    <button class='btn btn-danger edit'  style='font-size: 25px'>Delete</button>
                    </a>
                </td>

            </tr>
            <%}%>
        </table>



    </div>

</div>


<!--PAGINATION-->
<div style='
        margin: 0;
        display: flex;
        justify-content: center;
        width: 100%;
'>
    <table >
        <tr>
            <%  const mod=datos[1]%10;
            const res=datos[1]/10-mod;
            //   var i:Number;
            %>
            <%for (i=0;i<datos[1];i=i+10){%>
            <td style='
                margin-left: 200px;
                margin-right: 200px;
'>


                    <p style='font-size: 25px;margin-left: 10px;margin-right: 10px '>
                        <a href='/subject/?skip=<%=i%>'>
                        <%=(i/10)+1%>
                        </a>
                    </p>


            </td>
            <%}%>
        </tr>
    </table>
</div>



